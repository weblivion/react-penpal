{
  "compilerOptions": {
    "rootDir": "./src/",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/"
  ]
}